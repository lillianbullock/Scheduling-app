<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evans.ui.EditAppointmentFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Customer name -->
        <TextView
            android:id="@+id/txt_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/etxt_customer_name"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_customer_name"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Customer email -->
        <TextView
            android:id="@+id/txt_customer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_customer_name" />


        <EditText
            android:id="@+id/etxt_customer_email"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_customer_email"
            app:layout_constraintTop_toBottomOf="@id/etxt_customer_name" />


        <!-- Customer phone -->
        <TextView
            android:id="@+id/txt_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_customer_email" />


        <EditText
            android:id="@+id/etxt_customer_phone"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_customer_phone"
            app:layout_constraintTop_toBottomOf="@id/etxt_customer_email" />


        <!-- Appointment Date -->
        <TextView
            android:id="@+id/txt_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etxt_customer_phone" />


        <EditText
            android:id="@+id/etxt_appointment_date"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toEndOf="@+id/txt_appointment_date"
            app:layout_constraintTop_toBottomOf="@id/etxt_customer_phone" />


        <!-- Service type -->
        <TextView
            android:id="@+id/txt_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/service"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_appointment_date" />


        <EditText
            android:id="@+id/etxt_service_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="datetime"
            app:layout_constraintStart_toEndOf="@+id/txt_service_type"
            app:layout_constraintTop_toBottomOf="@id/etxt_appointment_date" />

        <!-- Price  -->
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/Price"
            app:layout_constraintStart_toEndOf="@id/etxt_service_type"
            app:layout_constraintTop_toBottomOf="@id/txt_appointment_date" />


        <EditText
            android:id="@+id/etxt_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="datetime"
            app:layout_constraintStart_toEndOf="@+id/txt_price"
            app:layout_constraintTop_toBottomOf="@id/etxt_appointment_date" />


        <!-- Notes -->
        <TextView
            android:id="@+id/txt_appointment_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="@string/notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_service_type" />

        <EditText
            android:id="@+id/etxt_appointment_note"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toEndOf="@+id/txt_appointment_note"
            app:layout_constraintTop_toBottomOf="@id/etxt_price" />


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/red_button"
            android:text="@string/cancel"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_appointment_note" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/blue_button"
            android:text="@string/save"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@+id/txt_appointment_note" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
