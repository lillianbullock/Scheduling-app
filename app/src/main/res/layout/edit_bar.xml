<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <View
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_edit_bar_cancel"
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:drawableStart="@drawable/ic_close_white_24dp"
            android:drawablePadding="2dip"
            android:background="#00000000"
            android:paddingEnd="30dip"
            android:paddingStart="26dip"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="true"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_edit_bar_save"
            android:text="@string/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:drawableStart="@drawable/ic_done_white"
            android:drawablePadding="2dip"
            android:background="#00000000"
            android:paddingEnd="30dip"
            android:paddingStart="26dip"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:gravity="center" />

</android.support.constraint.ConstraintLayout>